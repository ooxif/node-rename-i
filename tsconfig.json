{
  "compilerOptions": {
    "charset": "utf8",
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "lib": ["ES2020", "ESNext.String"],
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src/**/*", "package.json"]
}
